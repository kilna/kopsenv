#!/usr/bin/env bash
set -e
if [ -n "$KOPSENV_DEBUG" ]; then
  export PS4='+ [${BASH_SOURCE##*/}:${LINENO}] '
  set -x
fi

# http://stackoverflow.com/questions/1055671/how-can-i-get-the-behavior-of-gnus-readlink-f-on-a-mac
readlink_f() {
  local target_file=$1
  local file_name

  while [ "$target_file" != "" ]; do
    cd $(dirname ${target_file})
    file_name=$(basename ${target_file})
    target_file=$(readlink ${file_name})
  done

  echo $(pwd -P)/${file_name}
}

if [ -z "${KOPSENV_ROOT}" ]; then
  KOPSENV_ROOT=$(cd $(dirname $(readlink_f $0))/.. && pwd)
else
  KOPSENV_ROOT="${KOPSENV_ROOT%/}"
fi
export KOPSENV_ROOT
PATH="${KOPSENV_ROOT}/libexec:${PATH}"
export PATH
export KOPSENV_DIR="${PWD}"

abort() {
  {
    if [ "$#" -eq 0 ]; then
      cat -
    else
      echo "kopsenv: $*"
    fi
  } >&2
  exit 1
}

command="$1"
case "$command" in
  '')            {
                   kopsenv-version
                   kopsenv-help
                 } | abort;;
  -v|--version)  exec kopsenv-version;;
  -h|--help)     exec kopsenv-help;;
  *)             command_path="$(command -v "kopsenv-${command}" || true)"
                 if [ -z "$command_path" ]; then
                   {
                     echo "no such command '$command'"
                     kopsenv-help
                   } | abort
                 fi
                 shift 1
                 exec "$command_path" "$@";;
esac
